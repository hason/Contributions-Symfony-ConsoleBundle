<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="hoathis.console.helperSet.helper.formatter" class="Symfony\Component\Console\Helper\FormatterHelper">
            <tag name="hoathis.console.helperSet.helper"/>
        </service>

        <service id="hoathis.console.helperSet.helper.dialog" class="Symfony\Component\Console\Helper\DialogHelper">
            <tag name="hoathis.console.helperSet.helper"/>
        </service>

        <service id="hoathis.console.helperSet.helper.progress" class="Symfony\Component\Console\Helper\ProgressHelper">
            <tag name="hoathis.console.helperSet.helper"/>
        </service>

        <service id="hoathis.console.helperSet.helper.table" class="Symfony\Component\Console\Helper\TableHelper">
            <tag name="hoathis.console.helperSet.helper"/>
        </service>

        <service id="hoathis.console.helperSet.helper.cursor" class="Hoathis\SymfonyConsoleBridge\Helper\CursorHelper">
            <tag name="hoathis.console.helperSet.helper"/>
        </service>

        <service id="hoathis.console.helperSet.helper.readline" class="Hoathis\SymfonyConsoleBridge\Helper\ReadlineHelper">
            <tag name="hoathis.console.helperSet.helper"/>
        </service>

        <service id="hoathis.console.helperSet.helper.window" class="Hoathis\SymfonyConsoleBridge\Helper\WindowHelper">
            <tag name="hoathis.console.helperSet.helper"/>
        </service>

        <service id="hoathis.console.helperSet.helper.pager" class="Hoathis\SymfonyConsoleBridge\Helper\PagerHelper">
            <tag name="hoathis.console.helperSet.helper"/>
        </service>

        <service id="hoathis.console.helperSet.helper.tput" class="Hoathis\SymfonyConsoleBridge\Helper\TputHelper">
            <tag name="hoathis.console.helperSet.helper"/>
        </service>
    </services>

</container>
